<?xml version="1.0" encoding="utf-8"?>
<offers>
  <!--
       percentage part
       voucher type allows discounts off specified parts. No buy requirements 
       (eg, 50% off all widgets)
       - parts list for which voucher applies 
       - percentage discount amount to be applied.
       -->
  <!--
       part
       voucher type allows discounts off specified parts. No buy requirements 
       (eg, 1 quid off all widgets)
       - parts list for which voucher applies 
       - fixed discount amount to be applied.
       - enforce no discount amount greater than the minimum part price. 
       -->
  <!-- 
       percentage pool
       type allows for buy any of these, get any of these w/percent discount (eg mix & match
       bogof) 
       -'pool' of parts - any in pool applicable for offer.
       - will iterate through cart to find cheapest applicable part (not line) not yet discounted by
         this voucher. Disallows any parts already discounted to free. 
       - percentage discount
       - buy get qty
       -->
  <!-- 
       linksave
       -->
  <!-- 
       multibuy
       type allows for buy x get x - quantity & discounts (eg, buy 1, get 5 quid off second)
       -same part bought/got
       -fixed sum discount 
       -buy/get qty
       -multiple parts per voucher
       -->
  <!-- 
       percentage multibuy
       type allows for buy x get x - quantity and discounts (eg, buy 2 get 1 half price)
       -same part bought/got
       -percent discount 
       -buy/get qty
       - multiple parts per voucher
       -->
  <!--
      percentage spend
      type allows percentage off any order with this voucher (eg, 20% off all orders)
      -no parts requirements
      -spend parameter - set to zero for all orders, anything else enforces minimum spend
      -percentage discount
      -->
  <!-- 
      spend
      type allows fixed price off any order with this voucher (eg, 20 quid off all orders)
      -no parts requirements
      -spend parameter - set to zero for all orders, anything else enforces minimum spend
      -->
  <offer code="testinggroup" type="groupPartVoucher" des="testing grouppart" expiry="20/02/2014">
    <get>
      <discount amount="3" />
    </get>
    <buy>
      <spend />
      <part name="AL00001" />
      <part name="AL00002" />
      <part name="AL00003" />
    </buy>
  </offer>
  <offer code="testingspend" type="spendVoucher" des="Testing the SpendVoucher" expiry="21/02/2014">
    <get>
      <discount amount="2" />
    </get>
    <buy>
      <spend amount="5" />
    </buy>
  </offer>
  <offer code="testingpart" type="partVoucher" des="testing part voucher" expiry="20/02/2014">
    <get>
      <discount amount="2" />
    </get>
    <buy>
      <spend amount="10" />
      <part name="AL00001" />
    </buy>
  </offer>
  <offer code="testingmulti" type="multiBuyVoucher" des="testing multibuy vouchers " expiry="20/02/2014">
    <get qty="1">
      <discount amount="1" />
    </get>
    <buy qty="1">
      <spend />
      <part name="AL00001" />
    </buy>
  </offer>
</offers>